<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreeResultFragment">
    <LinearLayout
        android:id="@+id/vipactivity_la1nding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:id="@+id/vipfr_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:fontFamily="sans-serif-medium"
            android:padding="10dp"
            android:textSize="16dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/baseline_email_24"
            android:text=" Contact: tipsb160@gmail.com"/>
        <ProgressBar
            android:id="@+id/vipfr_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vipfr_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="sans-serif-medium"
                android:textSize="15dp"
                android:visibility="gone"
                android:padding="10dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@color/md_yellow_500"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vipfr_resultRecyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>
